%h1
  イベント名：
  = @grouping.title

%dl
  %dt Event Title
  %dd= @grouping.title
  %dt Event Catch
  %dd= @grouping.catch
  %dt Event URL
  %dd= link_to @grouping.event_url, @grouping.event_url
  %dt Event Address
  %dd= @grouping.address
  %dt Event Date
  %dd= @grouping.started_at.strftime("%Y/%m/%d %H:%M")
  %dt Event Owner
  %dd= @grouping.owner_nickname

%p.acceoted_users
  イベントの人数：
  %span.number= @grouping.users.size
  人 / 
  グループの数：
  %span.number= @grouping.groupings_count

#groupings
  - num = 0
  - @grouping.groups.each do |group|
    .grouping
      - num += 1
      %h2 Group #{num}
      %ul.users
        - group.users.each do |user|
          %li.user
            %p.icon
              - if user.twitter_img.present?
                = image_tag user.twitter_img
              - else
                = image_tag 'no_icon.gif'
                
            %p.name= truncate user.nickname, :length => 15
  
%script#results-json(type='text/json')
  = raw @json

- case action_name
- when 'preview'
  .next
    %ul
      %li.shuffle= link_to 'やり直す', ''
      %li.result= link_to '確定', ''
- when 'show'
  .next
    %ul
      %li.result= link_to '新しくシャッフルする', root_path(:event_url => @grouping.event_url)
