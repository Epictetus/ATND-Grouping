%h1.description ATNDイベント参加者をランダムにグループ別け
= form_for @grouping, :url => preview_groupings_path, :remote => true do |f|
  #form
    %fieldset
      %ol
        %li.url
          %p.inner
            %span.label
              = f.label :event_url, 'URL'
            %span.input
              = f.text_field :event_url
          %p.note
            ATNDのURLをコピペ
            %span
              （例：http://atnd.org/events/22605）
        %li.groups
          %p.inner
            %span.label
              = f.label :event_url, 'Groups'
            %span.input
              = f.select :groupings_count, (2..100).to_a, :include_blank => 'グループ数を選択'
      %p.commit
        = f.submit 'シャッフル', :onclick => "location.href='#result'"

#results

#loading
  Loading..

%style(type='text/css')
  :sass
    #loading
      display: none
      position: fixed
      top: 0
      right: 20px
      padding: 10px 20px
      background: #333
      color: #AAA

:javascript
   $(function(){
     Grouping.init()
   });
